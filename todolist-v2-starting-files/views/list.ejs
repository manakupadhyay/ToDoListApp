<%- include("header") -%>

<div class="box" id="heading">
  <h1> <%= listTitle %> </h1>
</div>

<div class="box">
  <form action="/delete" method="post">
    <% for (let i=0; i<newListItems.length; i++) { %>
    <div class="item">
      <input type="checkbox" value="<%=newListItems[i]._id %>" name="checkbox" onchange="this.form.submit()">
      <p><%=  newListItems[i].name  %></p>
    </div>
    <% } %>
  </form>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" style="cursor:pointer" name="list">+</button>
  </form>
</div>

<%- include("footer") -%>
